{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["app/*"]
    }
  },
  "files": [],
  "include": [],
  "exclude": ["**/node_modules"],
  "references": [{ "path": "./app" }, { "path": "./server" }]
}
