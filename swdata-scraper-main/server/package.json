  "yarn.nodemanager.resource.memory-mb": "1000",
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "@google-cloud/logging-winston": "^4.2.2",
    "@sushiswap/sushi-data": "^1.0.26",
    "@types/cors": "^2.8.12",
    "@types/mathjs": "^9.4.2",
    "apollo-boost": "^0.4.9",
    "axios": "^0.25.0",
    "axios-cache-adapter": "^2.7.3",
    "axios-request-throttle": "^1.0.0",
    "bignumber.js": "^9.0.2",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.0",
    "ethers": "^5.5.4",
    "express": "^4.17.2",
    "graphql": "^16.3.0",
    "helmet": "^5.0.2",
    "lodash": "^4.17.21",
    "luxon": "^2.5.2",
    "math.js": "^1.1.46",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "urql": "^2.1.3",
    "winston": "^3.6.0",
    "yargs": "^17.4.1"
  },
  "scripts": {
    "build": "tsc --project ./",
    "build:docker": "docker build . -t swdata-hoarder",
    "build:docker-deploy": "yarn dist:docker && docker buildx build --platform linux/x86_64 -t ingester -t eu.gcr.io/sw-dao/ingester .",
    "dist": "yarn clean && env-cmd -f ../.env.production yarn build && ncp ../.env.production build/.env",
    "dist:docker": "yarn clean && yarn build",
    "copyui": "rimraf build/public && cd ../app && yarn dist && cd ../server && ncp ../app/build build/public",
    "start": "yarn dist && pm2 start ecosystem.config.js",
    "start:monitor": "yarn start && pm2 monit",
    "start:ingester": "env-cmd -f ./build/.env ts-node-dev ./build/ingester",
    "start:docker": "ts-node-dev ./build/ingester",
    "clean": "rimraf ./build",
    "integration": "docker-compose -p 'swdata-backend' up -d",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0",
    "@types/express": "^4.17.13",
