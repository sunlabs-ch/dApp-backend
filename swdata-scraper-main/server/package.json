    "jest-extended": "^2.0.0",
    "ncp": "^2.0.0",
    "rewire": "^6.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
